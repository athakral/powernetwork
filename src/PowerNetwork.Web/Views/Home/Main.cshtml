@using PowerNetwork.Core.Helpers
@{
    ViewData["Title"] = "Home Page";
}

<div class="container" id="homeView">
    <img src="~/images/logo-@(ViewBag.SubDomain).png" class="logo-@(ViewBag.SubDomain)" />
    <h1>
        @if (User.Identity.IsAuthenticated) {
            <small>(@User.Identity.Name: <a href="/home/logout"><span class="glyphicon glyphicon-off"></span> @ViewBag.Texts["Home.Logout"]</a>)</small>
        }
        @ViewBag.Texts["Main.Header"]
    </h1>
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            <div class="box" data-url="/power-outlet">
                <h3>@Html.Raw(ViewBag.Texts["Main.Box1.Header"])</h3>
                <img src="~/images/power0.png" />
                <p>@Html.Raw(ViewBag.Texts["Main.Box1.Content"])</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box" data-url="/fraud">
                <h3>@Html.Raw(ViewBag.Texts["Main.Box2.Header"])</h3>
                <img src="~/images/fraud0.png" />
                <p>@Html.Raw(ViewBag.Texts["Main.Box2.Content"])</p>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".box").click(function () {
                var url = $(this).attr("data-url");
                if (url != null && url != '') {
                    window.location.href = url;
                }
            });
        });
    </script>
}
